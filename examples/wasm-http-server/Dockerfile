FROM docker.io/library/rust:1.80.0-slim-bookworm AS builder
RUN apt-get update && \
    apt-get install -y clang && \
    apt-get clean
RUN rustup target add wasm32-wasi
ENV RUSTFLAGS="--cfg wasmedge --cfg tokio_unstable"
RUN mkdir /build
COPY . /build/
RUN ls -lah /build
WORKDIR /build
RUN cargo build --target wasm32-wasi --release
RUN ls -lah
RUN chmod +x target/wasm32-wasi/release/wasm-http-server.wasm

FROM scratch
COPY --from=builder /build/target/wasm32-wasi/release/wasm-http-server.wasm /
CMD ["/wasm-http-server.wasm"]
